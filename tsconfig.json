{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "vite/client",
      "@alova/adapter-axios"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.d.ts",
    "types/**/*.d.ts",
    "build/**/*.d.ts",
    "./auto-imports.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
